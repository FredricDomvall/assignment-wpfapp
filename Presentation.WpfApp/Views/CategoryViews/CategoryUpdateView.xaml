<UserControl x:Class="Presentation.WpfApp.Views.CategoryViews.CategoryUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.CategoryViews"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=categoryVM:CategoryUpdateViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Bottom" Grid.Column="0" Margin="10">
            <Button Command="{Binding NavigateToCategoryListViewCommand}" Content="Back to Category List" FontStyle="Italic" Height="50"  Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="{Binding CurrentCategoryDetails.CategoryId}" />
            <TextBox Margin="0,5" Text="{Binding CurrentCategoryDetails.CategoryId}"/>
            <Label Content="{Binding CurrentCategoryDetails.CategoryName}" />
            <TextBox Margin="0,5" Text="{Binding CurrentCategoryDetails.CategoryName}"/>
            <Label Content="{Binding CurrentCategoryDetails.CategoryPrefix}" />
            <TextBox Margin="0,5" Text="{Binding CurrentCategoryDetails.CategoryPrefix}"/>

        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" Grid.Column="1" Margin="10">
            <Button Command="{Binding UpdateCategoryCommand}" Content="Update Category" FontStyle="Italic" Height="50"  Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
