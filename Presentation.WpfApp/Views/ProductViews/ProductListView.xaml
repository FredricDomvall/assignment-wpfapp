<UserControl x:Class="Presentation.WpfApp.Views.ProductViews.ProductListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.ProductViews"
             
             xmlns:models="clr-namespace:Infrastructure.Models;assembly=Infrastructure"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=manufacturerVM:ManufacturerListViewModel}"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="30,10,30,10">
            <Button Command="{Binding NavigateToProductCreateViewCommand}" Content="Create Product" FontStyle="Italic" />
        </StackPanel>

        <ListView ItemsSource="{Binding ProductList}" Grid.Column="1"  Grid.RowSpan="3" Margin="10" HorizontalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:Product}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <!-- Column 1: Name -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="150">
                                <TextBox Text="Name" BorderThickness="0" Margin="2 0 0 0" FontWeight="Bold" Background="Transparent"/>
                                <TextBlock Text="{Binding ProductName, StringFormat='{} {0}'}" FontWeight="Bold" FontSize="16" Foreground="#2D4159" Background="Transparent"/>
                            </StackPanel>
                            <!-- Column 2: Price -->
                            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Left" Width="100">
                                <TextBox Text="Name" BorderThickness="0" Margin="2 0 0 0" FontWeight="Bold" Background="Transparent"/>
                                <TextBlock Text="{Binding ProductPrice, StringFormat='{} {0} kr'}" FontWeight="Bold" FontSize="16" Foreground="#2D4159" Background="Transparent" Padding="0,0,10,0"/>
                            </StackPanel>

                            <!-- Column 3: Buttons (span both rows) cleaned -->
                            <StackPanel Orientation="Horizontal" Margin="40 0 0 0">
                                <Button Content="Details" Command="{Binding DataContext.ShowProductDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="60" Height="40" />
                                <Button Content="Edit" Command="{Binding DataContext.NavigateToProductUpdateViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="60" Height="40" />
                                <Button Content="Delete" Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="60" Height="40" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Product details panel shown when a product is selected -->
        <Border Grid.Row="1" Grid.Column="0" Padding="2" Margin="10 +0"
        BorderBrush="Gray" BorderThickness="1" CornerRadius="2" Background="#FFF">
            <StackPanel>
                <TextBlock Text="{Binding CurrentProductDetails.ProductName}" FontWeight="Bold" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.ProductId}" Margin="0,2" FontSize="8" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.ProductPrice, StringFormat='Price: {0:C2}'}" Margin="0,2" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.ProductCode, StringFormat='ArticleNumber: {0}'}" Margin="0,2" TextWrapping="Wrap"/>

                <TextBlock Text="{Binding CurrentProductDetails.Category.CategoryName, StringFormat='Category: {0}'}" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.Manufacturer.ManufacturerName, StringFormat='Manufacturer: {0}'}" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.Manufacturer.ManufacturerEmail, StringFormat='Email: {0}'}" Margin="0,2" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.Manufacturer.ManufacturerCountry, StringFormat='Country: {0}'}" Margin="0,2" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentProductDetails.ProductDescription, StringFormat='Description: '}" Margin="0,2" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,10,10,10">
            <Button Content="Back To Startmenu" Command="{Binding NavigateToStartViewCommand}" FontStyle="Italic" Background="#c4c4c4"/>
        </StackPanel>
    </Grid>
</UserControl>
