<UserControl x:Class="Presentation.WpfApp.Views.ProductViews.ProductCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.ProductViews"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=productVM:ProductCreateViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Product Name -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding NewProduct.ProductName}" VerticalAlignment="Center" Margin="20,5,0,5" FontStyle="Italic" Foreground="Gray"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,5" Text="{Binding NewProduct.ProductName, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Description -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding NewProduct.ProductDescription}" VerticalAlignment="Center" Margin="20,5,0,5" FontStyle="Italic" Foreground="Gray"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding NewProduct.ProductDescription, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Price -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Price:" VerticalAlignment="Center" Margin="20,5,0,5" FontStyle="Italic" Foreground="Gray"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5" Text="{Binding NewProduct.ProductPrice, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Category -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Category:" VerticalAlignment="Center" Margin="20,5,0,5" FontStyle="Italic" Foreground="Gray"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,5" 
                  ItemsSource="{Binding Categories}" 
                  SelectedItem="{Binding NewProduct.CategoryName, Mode=TwoWay}" 
                  DisplayMemberPath="CategoryName"/>

        <!-- Manufacturer -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Manufacturer:" VerticalAlignment="Center" Margin="20,5,0,5" FontStyle="Italic" Foreground="Gray"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,5" 
                  ItemsSource="{Binding Manufacturers}" 
                  SelectedItem="{Binding NewProduct.ManufacturerName, Mode=TwoWay}" 
                  DisplayMemberPath="ManufacturerName"/>

        <!-- Info Row (unchanged, now on row 8) -->
        <StackPanel x:Name="ValidationMessagesPanel" Grid.Row="8" Grid.ColumnSpan="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,20,5,5" Visibility="Collapsed">
            <TextBlock Text="* All fields are required." FontStyle="Italic" Foreground="Gray" Height="25" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Text="* All fields are required." FontStyle="Italic" Foreground="Gray" Height="25" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Text="* All fields are required." FontStyle="Italic" Foreground="Gray" Height="25" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Text="* All fields are required." FontStyle="Italic" Foreground="Gray" Height="25" VerticalAlignment="Center" Margin="0,5"/>
        </StackPanel>
        <!-- Submit Button -->
        <Button Grid.Row="9" Grid.Column="1" Content="Create Product" Width="150" Height="35" HorizontalAlignment="Right" Margin="0,10,100,0"/>

        <!-- Cancel Button -->
        <Button Grid.Row="9" Grid.Column="1" Content="Cancel" Width="150" Height="35" HorizontalAlignment="Left" Margin="100,10,25,0"/>
    </Grid>
</UserControl>
