<UserControl x:Class="Presentation.WpfApp.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:StartViewModel}"
             Background="#d5d5d5"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to the Product Management System" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24" 
                   FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
            <Button Content="Manage Products" Width="150" Height="40" Margin="10" Command="{Binding NavigateToProductListViewCommand}"/>
            <Button Content="Manage Categories" Width="150" Height="40" Margin="10" Command="{Binding NavigateToCategoryListViewCommand}"/>
            <Button Content="Manage Manufacturers" Width="150" Height="40" Margin="10" Command="{Binding NavigateToManufacturerListViewCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
