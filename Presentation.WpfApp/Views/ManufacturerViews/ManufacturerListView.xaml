<UserControl x:Class="Presentation.WpfApp.Views.ManufacturerViews.ManufacturerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.ManufacturerViews"
             
             xmlns:models="clr-namespace:Infrastructure.Models;assembly=Infrastructure"
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=manufacturerVM:ManufacturerListViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Button Command="{Binding NavigateToManufacturerCreateViewCommand}" Content="Create Manufacturer" FontStyle="Italic" Height="50"  Margin="0,0,0,10"/>
        </StackPanel>

        <ListView ItemsSource="{Binding ManufacturerList}" Grid.RowSpan="3" Grid.Column="1" Width="580" Height="400" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:Manufacturer}">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Column 1: Name -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical" VerticalAlignment="Center">
                            <Label Content="Name" FontWeight="Bold" FontSize="12" Foreground="#2D4159" Background="Transparent" Padding="0,0,0,0"/>
                            <TextBlock Text="{Binding ManufacturerName}" FontWeight="Bold" FontSize="14" Foreground="#2D4159" Background="Transparent" Padding="0,0,10,0"/>
                        </StackPanel>

                        <!-- Column 2: Email -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical" VerticalAlignment="Center">
                            <Label Content="Email" FontWeight="Bold" FontSize="12" Foreground="#2D4159" Background="Transparent" Padding="0,0,0,0"/>
                            <TextBlock Text="{Binding ManufacturerEmail}" FontWeight="Bold" FontSize="14" Foreground="#2D4159" Background="Transparent" Padding="0,0,10,0"/>
                        </StackPanel>

                        <!-- Column 3: Buttons (span both rows) -->
                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0">
                            <Button Content="Details" Command="{Binding DataContext.ShowManufacturerDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="75" Height="50" />
                            <Button Content="Edit" Width="75" Height="50" />
                            <Button Content="Delete" Width="75" Height="50" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Manufacturer details panel shown when a manufacturer is selected -->
        <Border Grid.Row="1" Grid.Column="0" Padding="10" Margin="10 0"
        BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#FFF">
            <StackPanel>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerName}" FontWeight="Bold" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerId}" Margin="0,2" FontSize="8" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerEmail, StringFormat='Email: {0}'}" Margin="0,2" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerCountry, StringFormat='Country: {0}'}" Margin="0,2" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Previous" Command="{Binding NavigateToStartViewCommand}" FontStyle="Italic" Background="#c4c4c4" Width="80" Margin="5"/>
            <Button Command="{Binding RefreshManufacturerListCommand}" FontStyle="Italic" Background="#c4c4c4" Width="80" Margin="5" ToolTip="Reload">
                <TextBlock Text="&#x21bb;" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 10"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
