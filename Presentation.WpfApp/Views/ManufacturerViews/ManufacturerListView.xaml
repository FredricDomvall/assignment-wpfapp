<UserControl x:Class="Presentation.WpfApp.Views.ManufacturerViews.ManufacturerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.ManufacturerViews"
             
             xmlns:models="clr-namespace:Infrastructure.Models;assembly=Infrastructure"
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=manufacturerVM:ManufacturerListViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="30,10,30,10">
            <Button Command="{Binding NavigateToManufacturerCreateViewCommand}" Content="Create Manufacturer" FontStyle="Italic" />
        </StackPanel>

        <ListView ItemsSource="{Binding ManufacturerList}" Grid.Column="1" Grid.RowSpan="3" Margin="10" HorizontalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:Manufacturer}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <!-- Column 1: Name -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="150">
                                <TextBox Text="Name" BorderThickness="0" Margin="2 0 0 0" FontWeight="Bold" Background="Transparent"/>
                                <TextBlock Text="{Binding ManufacturerName, StringFormat='{} {0}'}" FontWeight="Bold" FontSize="16" Foreground="#2D4159" Background="Transparent"/>
                            </StackPanel>
                            <!-- Column 2: Country -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="100">
                                <TextBox Text="Country" BorderThickness="0" Margin="2 0 0 0" FontWeight="Bold" Background="Transparent"/>
                                <TextBlock Text="{Binding ManufacturerCountry, StringFormat='{} {0}'}" FontWeight="Bold" FontSize="16" Foreground="#2D4159" Background="Transparent" Padding="0,0,10,0"/>
                            </StackPanel>
                            <!-- Column 3: Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="35 0 0 0">
                                <Button Content="Details" Command="{Binding DataContext.ShowManufacturerDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="60" Height="40" />
                                <Button Content="Edit" Command="{Binding DataContext.NavigateToManufacturerUpdateViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="60" Height="40" />
                                <Button Content="Delete" Command="{Binding DataContext.DeleteManufacturerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="60" Height="40" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Details panel shown when a listobject is selected -->
        <Border Grid.Row="1" Grid.Column="0" Padding="2" Margin="10,0"
        BorderBrush="Gray" BorderThickness="1" CornerRadius="2" Background="Transparent">
            <StackPanel>
                <TextBlock Text="Click Edit-button to show details of the selected Manufacturer." FontStyle="Italic" Margin="8 60 8 25" TextWrapping="Wrap" FontWeight="SemiBold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#c4c4c4" Visibility="{Binding DetailsVisibilityInfo}"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerName}" FontWeight="Bold" TextWrapping="Wrap" FontSize="25" Margin="0 0 0 30" HorizontalAlignment="Center" Foreground="#2D4159" Visibility="{Binding DetailsVisibility}"/>
                
                <TextBlock Text="ID:" FontWeight="Bold" FontSize="13" Foreground="#2D4159" Padding="0,0,0,2" Visibility="{Binding DetailsVisibility}"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerId}" Margin="1" FontSize="11" TextWrapping="Wrap" Padding="0,0,0,6" Foreground="#2D4159" Visibility="{Binding DetailsVisibility}"/>
                
                <TextBlock Text="Email:" FontWeight="Bold" FontSize="13" Foreground="#2D4159" Padding="0,0,0,2" Visibility="{Binding DetailsVisibility}"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerEmail}" Margin="1" FontSize="15" TextWrapping="Wrap" Padding="0,0,0,6" Foreground="#2D4159" Visibility="{Binding DetailsVisibility}"/>
                
                <TextBlock Text="Country:" FontWeight="Bold" FontSize="13" Foreground="#2D4159" Padding="0,0,0,2" Visibility="{Binding DetailsVisibility}"/>
                <TextBlock Text="{Binding CurrentManufacturerDetails.ManufacturerCountry}" Margin="1" FontSize="15" TextWrapping="Wrap" Padding="0,0,0,6" Foreground="#2D4159" Visibility="{Binding DetailsVisibility}"/>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,10,10,10">
            <Button Content="Back To Startmenu" Command="{Binding NavigateToStartViewCommand}" FontStyle="Italic" Background="#c4c4c4"/>
        </StackPanel>
    </Grid>
</UserControl>
