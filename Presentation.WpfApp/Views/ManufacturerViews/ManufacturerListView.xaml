<UserControl x:Class="Presentation.WpfApp.Views.ManufacturerViews.ManufacturerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.ManufacturerViews"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=manufacturerVM:ManufacturerListViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#f0f0f0" Padding="10" Margin="10" CornerRadius="5">
            <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
        <StackPanel Grid.Row="1">
            <Button Command="{Binding NavigateToManufacturerCreateViewCommand}" Content="Create Manufacturer" Width="150" Height="35" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <Button Command="{Binding NavigateToManufacturerUpdateViewCommand}" Content="Update Manufacturer" Width="150" Height="35" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <Button Command="{Binding NavigateToManufacturerDeleteViewCommand}" Content="Delete Manufacturer" Width="150" Height="35" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <Button Command="{Binding NavigateToStartViewCommand}" Content="Back to StartView" Width="150" Height="35" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
        <Button Grid.Row="2" Command="{Binding NavigateToProductListViewCommand}" Content="Product List" Width="150" Height="35" HorizontalAlignment="Right" Margin="0,10,100,0"/>
        <Button Grid.Row="2" Command="{Binding NavigateToCategoryListViewCommand}" Content="Category List" Width="150" Height="35" HorizontalAlignment="Left" Margin="100,10,25,0"/>
    </Grid>
</UserControl>
