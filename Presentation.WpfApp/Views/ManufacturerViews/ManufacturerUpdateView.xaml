<UserControl x:Class="Presentation.WpfApp.Views.ManufacturerViews.ManufacturerUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views.ManufacturerViews"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:productVM="clr-namespace:Presentation.WpfApp.ViewModels.ProductViewModels"
             xmlns:categoryVM="clr-namespace:Presentation.WpfApp.ViewModels.CategoryViewModels"
             xmlns:manufacturerVM="clr-namespace:Presentation.WpfApp.ViewModels.ManufacturerViewModels"
             d:DataContext="{d:DesignInstance Type=manufacturerVM:ManufacturerUpdateViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Bottom" Grid.Column="0" Margin="10">
            <Button Command="{Binding NavigateToManufacturerListViewCommand}" Content="Back to Manufacturer List" FontStyle="Italic" Height="50" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="{Binding CurrentManufacturerDetails.ManufacturerId}" />
            <TextBox Margin="0,5" Text="{Binding CurrentManufacturerDetails.ManufacturerId}" IsReadOnly="True"/>
            <Label Content="{Binding CurrentManufacturerDetails.ManufacturerName}" />
            <TextBox Margin="0,5" Text="{Binding CurrentManufacturerDetails.ManufacturerName}"/>
            <Label Content="{Binding CurrentManufacturerDetails.ManufacturerEmail}" />
            <TextBox Margin="0,5" Text="{Binding CurrentManufacturerDetails.ManufacturerEmail}"/>
            <Label Content="{Binding CurrentManufacturerDetails.ManufacturerCountry}" />
            <TextBox Margin="0,5" Text="{Binding CurrentManufacturerDetails.ManufacturerCountry}"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" Grid.Column="1" Margin="10">
            <Button Command="{Binding UpdateManufacturerCommand}" Content="Update Manufacturer" FontStyle="Italic" Height="50" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
